<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- Заголовок главного экрана -->
        <TextView
                android:id="@+id/titleMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Трекер финансов"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

        <!-- Раздел Расходы -->
        <TextView
                android:id="@+id/expensesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Расходы"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

        <!-- Таблица расходов -->
        <TableLayout
                android:id="@+id/expensesTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

            <!-- Заголовки колонок -->
            <TableRow>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Период"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сумма расходов"/>
            </TableRow>

            <!-- День -->
            <TableRow>
                <TextView
                        android:id="@+id/expensesDayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="День"/>
                <TextView
                        android:id="@+id/expensesDayValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </TableRow>

            <!-- Неделя -->
            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Неделя"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expensesWeekValue"/>
            </TableRow>

            <!-- Месяц -->
            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Месяц"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expensesMonthValue"/>
            </TableRow>
        </TableLayout>

        <!-- Кнопки для расходов -->
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonAddExpense"
                    android:text="Добавить расход"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonAllExpenses"
                    android:text="Все расходы"
                    android:layout_marginStart="16dp"/>
        </LinearLayout>
        
        <!-- Раздел доходов -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/incomeHeader"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Доходы"
                android:layout_marginTop ="24dp"/>

        <!-- Таблица доходов -->
        <TableLayout
                android:id="@+id/incomeTable"
                android:layout_width= "match_parent"
                android:layout_height= "wrap_content"
                android:stretchColumns= "1">

            <!-- Заголовки колонок -->
            <TableRow>
                <TextView
                        android:layout_width= "wrap_content"
                        android:layout_height= "wrap_content"
                        android:text= "Период"/>
                <TextView
                        android:layout_width= "wrap_content"
                        android:layout_height= "wrap_content"
                        android:text= "Сумма доходов"/>
            </TableRow>

            <!-- День -->
            <TableRow>
                <TextView
                        android:id= "@+id/incomeDayLabel"
                        android:layout_width= "wrap_content"
                        android:layout_height= "wrap_content"
                        android:text= "День"/>
                <TextView
                        android:id= "@+id/incomeDayValue"
                        android:layout_width= "wrap_content"
                        android:layout_height= "wrap_content"/>
            </TableRow>

            <!-- Неделя -->
            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text= "Неделя"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id= "@+id/incomeWeekValue" />
            </TableRow>

            <!-- Месяц -->
            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text= "Месяц"/>
                <TextView
                        android:id="@+id/incomeMonthValue"
                        android:layout_width ="wrap_content"
                        android:layout_height ="wrap_content"/>
            </TableRow>
        </TableLayout>

        <!-- Кнопки для доходов -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation ="horizontal"
                android:gravity ="center_horizontal"
                android:layout_marginTop ="8dp">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id ="@+id/buttonAddIncome"
                    android:text =" Добавить доход "/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id ="@+id/buttonAllIncome"
                    android:text =" Все доходы "/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>