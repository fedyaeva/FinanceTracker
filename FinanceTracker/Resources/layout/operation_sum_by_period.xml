<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp">

    <!-- Верхняя панель с кнопкой назад -->
    <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"/>

    <!-- Заголовок с выбранным периодом -->
    <TextView
            android:id="@+id/textViewPeriodTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Период"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

    <!-- Панель переключения периода -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

        <Button
                android:id="@+id/buttonPrevPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Предыдущий"/>

        <TextView
                android:id="@+id/textViewCurrentPeriodDisplay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Период отображения"
                android:textSize="16sp"
                android:textAlignment="center"/>

        <Button
                android:id="@+id/buttonNextPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Следующий"/>
    </LinearLayout>

    <!-- Список категорий с суммами -->
    <ListView
            android:id="@+id/listViewCategoriesSum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>